# CHEKING FOR PURINS AND PYRIMIDINS
dna="AATTGGCC"
for i in dna:
  if i=="G" or i=="A":
   print(i, "purine")
  else:
   print(i, "pyrimidine")
# counting in loop
purine=0; pyrimidine=0
dna="GAATTCAAAA"
#LOOP START
for i in dna:
  if i=="G" or i=="A":
   print(i, "purine")
   purine+=1
  else :
    print(i, "pyrimidine")
    pyrimidine+=1
 #loop end
print("total purines = ", purine, "total pyrimidines = ", pyrimidine)    
